{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "required": [
        "suggestions"
    ],
    "properties": {
        "suggestions": {
            "type": "array",
            "items": {
                "type": "object",
                "required": [
                    "title",
                    "why",
                    "effort",
                    "evidence_refs"
                ],
                "properties": {
                    "title": {
                        "type": "string"
                    },
                    "why": {
                        "type": "string"
                    },
                    "effort": {
                        "type": "string",
                        "enum": [
                            "S",
                            "M",
                            "L"
                        ]
                    },
                    "impact": {
                        "type": "string",
                        "enum": [
                            "LOW",
                            "MED",
                            "HIGH"
                        ]
                    },
                    "confidence": {
                        "type": "number",
                        "minimum": 0,
                        "maximum": 1
                    },
                    "evidence_refs": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    }
                }
            }
        }
    }
}